# ==================================
# n8n Environment Variables
# ==================================

# Уақыт белдеуі
GENERIC_TIMEZONE=Asia/Almaty

# ==================================
# Дерекқор конфигурациясы
# ==================================
DB_TYPE=postgres
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=n8n_password_here   # <-- өзіңіздің қауіпсіз парольіңізді қойыңыз

# ==================================
# n8n веб-интерфейсіне кіруге арналған логин
# ==================================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin_password_here  # <-- өзіңізге қауіпсіз пароль
